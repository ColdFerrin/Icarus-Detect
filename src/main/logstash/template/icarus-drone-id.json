{
  "settings": {
    "index": {
      "number_of_replicas": 1,
      "number_of_shards": 5,
      "refresh_interval": "5s",
      "mapping.total_fields.limit": 2000,
      "mapping.depth.limit": 50,
      "mapping.nested_fields.limit": 200
    }
  },
  "index_patterns": "icarus-drone-id*",
  "version": 1,
  "mappings": {
    "_doc": {
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "Image": {
          "type": "binary"
        },
        "Score": {
          "type": "double"
        },
        "Camera":{
          "properties": {
            "CamID": {
              "type": "integer"
            },
            "Location": {
              "type": "geo-point"
            },
            "CameraModel": {
              "properties": {
                "Make": {
                  "type": "keyword"
                },
                "Model": {
                  "type": "keyword"
                },
                "Lens": {
                  "type": "keyword"
                }
              }
            }
          }
        },
        "Identification": {
          "properties": {
            "Correct": {
              "type": "boolean"
            },
            "Is_Training": {
              "type": "boolean"
            },
            "Drone": {
              "properties": {
                "Make": {
                  "type": "keyword"
                },
                "Model": {
                  "type": "keyword"
                },
                "ModelNo": {
                  "type": "keyword"
                }
              }
            }
          }
        }
      }
    }
  }
}